<div class="article" data-id="{{article._id}}">
	<img class="article-image" src="{{article.image}}" alt="Article Image">
	<a class="article-title" href="{{article.link}}">{{article.title}}</a>
	<p class="article-byline">By {{article.author}}</p>
</div>
<div class="form-conatiner">
	<h3 class="form-title">Add a Comment</h5>
	<form class="comment-form">
		<label for="form-author">Name:</label>
		<input type="text" name="form-author" id="form-author">
		<label for="form-body">Comments:</label>
		<textarea name="form-body" id="form-body" cols="30" rows="10"></textarea>
		<input type="submit" id="form-submit">
	</form>
</div>
<div class="comments-container">
	<h3 class="comments-title">User Comments</h3>
	{{#if article.comments}}
		{{#each article.comments}}
			<div class="comment">
				<h4 class="comment-author">{{this.author}}</h6>
				<p class="comment-body">{{this.body}}</p>
				<button class="comment-delete" data-id="{{this._id}}">Delete Comment</button>
			</div>
		{{/each}}
	{{else}}
		<p class="no-comments">There are no comments on this article.</p>
	{{/if}}
</div>